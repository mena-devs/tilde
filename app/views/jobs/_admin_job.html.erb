<tr class="cart_item">
  <td>
    <%= boolean_icon(admin_job.approved?) %>
  </td>

  <td>
    <%= link_to(admin_job.title, admin_job, class: 'link') %>
  </td>

  <td>
    <%= admin_job.company_name %>
  </td>

  <td>
    <%= job_creator_name(admin_job) %>
  </td>

  <td>
    <%= time_ago_in_words(admin_job.created_at) %>
  </td>

  <td>
    <%= admin_job.job_statistics.try(:count) %>
  </td>

  <td>
    <%= admin_job.hired? %>
  </td>

  <td>
    <% if (authorised_admin? && admin_job.offline?) %>
      <%= link_to("Edit", edit_job_path(admin_job), class: "button button-3d button-mini button-rounded button-blue") %>
      <%= link_to("Delete", job_path(admin_job), class: "button button-3d button-mini button-rounded button-red", method: 'delete') %>
    <% end %>
  </td>
</tr>
