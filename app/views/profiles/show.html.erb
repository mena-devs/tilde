<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <div class="row clearfix">

        <div class="col-sm-9">

          <div class="row clearfix">
            <div class="col-md-2">
              <%= image_tag(@profile.profile_picture, class: 'alignleft img-circle img-thumbnail notopmargin nobottommargin', style: 'max-width: 84px;') %>
            </div>

            <div class="col-sm-10">
              <div class="heading-block noborder">
                <h3><%= name(@profile) %></h3>
                <span><%= biography(@profile) %></span>
              </div>
            </div>
          </div>

          <div class="clear"></div>

          <div class="row clearfix">

            <div class="col-md-12">

              <div class="tabs tabs-bb clearfix ui-tabs ui-widget ui-widget-content ui-corner-all" id="tabs-profile">

                <ul class="tab-nav clearfix">
                  <li>
                    <a href="#tab-account">
                      <i class="icon-user2"></i>
                      Account information</a>
                  </li>
                </ul>

                <div class="tab-container">
                  <div class="tab-content clearfix" id="tab-account">




                    <table class="table table-striped">
                      <tbody>
                        <tr>
                          <th class="col-sm-5">Porfile URL</th>
                          <td>menadevs.com/profiles/<%= nickname(@profile) %></td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Nickname</th>
                          <td><%= @profile.nickname %></td>
                        </tr>

                        <tr>
                          <th class="col-sm-5">Email</th>
                          <td><%= @profile.user.email %></td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Location</th>
                          <td><%= @profile.location_name %></td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Time Zone</th>
                          <td><%= @profile.user.time_zone %></td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Receive emails from MENA Devs?</th>
                          <td>
                            <div>
                              <% if @profile.receive_emails? %>
                                <%= fa_icon("check") %>
                              <% else %>
                                <%= fa_icon("close") %>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Receive job alerts?</th>
                          <td>
                            <div>
                              <% if @profile.receive_job_alerts %>
                                <%= fa_icon("check") %>
                              <% else %>
                                <%= fa_icon("close") %>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Connected via Slack login</th>
                          <td>
                            <div>
                              <% if @profile.user.connected_via_slack? %>
                                <%= fa_icon("check") %>
                                Enabled
                              <% else %>
                                <%= fa_icon("close") %>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                        <tr>
                          <th class="col-sm-5">Account privacy</th>
                          <td>
                            <div>
                              <% if @profile.privacy_level == 0 %>
                              <%= fa_icon("eye-slash", text: "Your profile is hidden") %>
                              <% elsif @profile.privacy_level == 1 %>
                              <%= fa_icon("adjust", text: "Your profile visible to members only") %>
                              <% elsif @profile.privacy_level == 2 %>
                              <%= fa_icon("eye", text: "Your profile is public") %>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      </tbody>
                    </table>

                  </div>
                </div>

              </div>

            </div>

          </div>

        </div>

        <div class="line visible-xs-block"></div>

        <div class="col-sm-3 clearfix">

          <div class="list-group">
            <%= link_to directory_user_path(@profile.user), class: "list-group-item clearfix" do %>
              Preview
              <%= fa_icon("eye", class: "pull-right") %>
            <% end %>

            <%= link_to edit_user_profile_path(@profile.user), class: "list-group-item clearfix" do %>
              Edit Profile
              <%= fa_icon("user", class: "pull-right") %>
            <% end %>

            <%= link_to new_user_password_path(@profile.user), class: "list-group-item clearfix" do %>
              Change Password
              <%= fa_icon("laptop", class: "pull-right") %>
            <% end %>

            <a href="#" class="list-group-item clearfix">Profile privacy
              <i class="icon-eye pull-right"></i>
            </a>

            <a href="#" class="list-group-item clearfix">Email preferences
              <i class="icon-envelope2 pull-right"></i>
            </a>
