<!-- Page Title
============================================= -->
<section id="page-title">

  <div class="container clearfix">
    <div class="row clearfix">
      <div class="col-md-8 col-xs-8 nopadding">
        <h1>Invitations</h1>
        <span>MENAdevs Slack Group</span>
      </div>
    </div>
  </div>

</section>
<!-- #page-title end -->

<%= render('shared/flash') %>

<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix content-padding-bottom">

      <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-6">
          <div class="well well-lg">
            Admittance to MENAdevs Slack group is invitation only and is restricited to members with technical background.
            <br/>
            If you wish to join or send an invitation for other people to join the group, please fill the following form with your contact details.
          </div>
        </div>
        <!-- /.alert alert-warning -->
      </div>

      <% if user_can_join_slack? %>
        <% tab_1 = 'active' %>
        <% tab_2 = '' %>
      <% else %>
        <% tab_1 = '' %>
        <% tab_2 = 'active' %>
      <% end %>

      <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-6">
          <ul class="nav nav-tabs nav-justified">
            <li role="presentation" class="<%= tab_1 %>">
              <%= link_to "Apply to join", "#tab-1", data: { toggle: "tab"}, disabled: true %>
            </li>
            <li role="presentation" class="<%= tab_2 %>">
              <%= link_to "Send invitation to someone else", "#tab-2", data: { toggle: "tab"} %>
            </li>
          </ul>
        </div>
      </div>

      <div class="tab-content">
        <div class="tab-pane tab-layout <%= tab_1 %>" id="tab-1">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="tab-internal">
                <h4>I would like to join MENAdevs Slack Group</h4>
                <% if user_can_join_slack? %>
                  <%= render "member_slack_apply_form" %>
                <% else %>
                  <div class="alert alert-danger" role="alert">
                    You are already an existing member.
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-pane tab-layout <%= tab_2 %>" id="tab-2">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="tab-internal">
                <h4>I would like to invite someone to join MENAdevs Slack group</h4>
                <h5>Enter below the details of the person you wish to invite:</h5>
                <%= render "slack_invitation_form" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
