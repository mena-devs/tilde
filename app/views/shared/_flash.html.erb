<% if flash && (flash[:notice].present? || flash[:error].present?) %>
  <section id="content">
    <div class="content-wrap">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <% flash.each do |key, value| %>
              <div class="<%= flash_class(key) %>">
                <div class="sb-msg"><%= value %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>